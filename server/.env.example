# 后端环境变量配置示例
# 复制此文件为 .env 并根据实际情况修改配置

# 服务器配置
PORT=5566
HOST=localhost
NODE_ENV=development

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=1d

# 数据库配置
DATABASE_URL=mysql://root:123456@localhost:3306/test

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# 文件上传配置
UPLOAD_DIR=static
MAX_FILE_SIZE=104857600

# CORS配置
CORS_ORIGIN=http://localhost:9394,http://localhost:3000,http://127.0.0.1:9394

# 限流配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AI（DeepSeek）配置
# 使用 OpenAI SDK 连接 DeepSeek，建议仅在本地 .env 中填写真实 Key
DEEPSEEK_API_KEY=
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat
AI_TIMEOUT_MS=60000
