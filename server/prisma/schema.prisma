generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         String       @id @unique
  email      String       @unique
  name       String?
  admin      Boolean
  password   String       @default(dbgenerated("123456"))
  random     Int          @default(dbgenerated("10"))
  UserDetail UserDetail[]
}

model UserDetail {
  id          String  @id @unique
  address     String?
  phoneNumber String?
  bio         String?
  // 其他详细信息字段...
  sex         String?
  age         Int?
  avatar      String
  user        User    @relation(fields: [userId], references: [id])
  userId      String
}
