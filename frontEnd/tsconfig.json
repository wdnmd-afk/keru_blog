{
    "$schema": "./node_modules/typescript/lib/tsconfig.schema.json",
    "references": [{ "path": "../shared" }],
    "compilerOptions": {
        "baseUrl": "./",
        "allowImportingTsExtensions": true,
        "composite": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
        "skipLibCheck": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "resolveJsonModule": true,
        "isolatedModules": true,
        "moduleDetection": "force",
        "noEmit": true,
        "jsx": "react-jsx",
        /* Linting */
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitAny": true,
        /* 移除了未知的编译器选项 allowUnusedImports */
        "paths": {
            "@": ["src"],
            "@/*": ["src/*"],
            "shared": ["../shared/src"],
            "shared/*": ["../shared/src/*"]
        }
    },

    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "src/**/*.json",
        "src/types/*.d.ts",
        "build/**/*.ts",
        "build/**/*.d.ts",
        "vite.config.ts",
        // 包含 management 项目的类型文件以支持跨项目引用
        "../management/src/types/*.d.ts",
        "../management/src/**/*.d.ts"
    ],
    "exclude": ["node_modules", "dist", "**/*.js"]
}
